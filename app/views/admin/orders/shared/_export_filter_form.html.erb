<div class="row get-data-region">
	<h3>Filter data to report</h3>
	<div class="col-md-3 col-xs-12">
		<%= label_tag :start %><br>
		<%= text_field_tag :start, nil, :class => 'form-control', :placeholder => 'Enter start date' %>
	</div>
	<div class="col-md-3 col-xs-12">
		<%= label_tag :end %><br>
		<%= text_field_tag :end, nil, :class => 'form-control', :placeholder => 'Enter end date' %>
	</div>
	<div class="col-md-3 col-xs-12">
		<%= label_tag :employee %><br>
		<%= collection_select(
			nil, 
			:employee, 
			@employees, 
			:id, 
			:username, 
			{ :prompt => true },
			:class => "form-control"
		)%>
	</div>
	<div class="col-md-3 col-xs-12">
		<%= button_tag :class => 'btn btn-primary export-report' do %>
			<%= content_tag :strong, 'Export report' %>
		<% end %>
	</div>
</div>


