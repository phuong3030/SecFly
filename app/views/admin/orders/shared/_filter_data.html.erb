<div class="row get-data-region">
	<h3>Get and filter data</h3>
	<div class="col-md-3 col-xs-12">
		<%= label_tag :start %><br>
		<%= text_field_tag :start, nil, :class => 'form-control', :placeholder => 'Enter start date' %>
	</div>
	<div class="col-md-3 col-xs-12">
		<%= label_tag :end %><br>
		<%= text_field_tag :end, nil, :class => 'form-control', :placeholder => 'Enter end date' %>
	</div>
	<div class="col-md-3 col-xs-12">
		<%= label_tag :status %><br>
		<%= select_tag(
			"status", 
			options_for_select([ 
				['New', 0], 
				['Viewed', 1],
				['Sent email', 2],
				['Sent tickets', 3]
			]), 
			:class => "form-control"
		)%>
	</div>
	<div class="col-md-3 col-xs-12">
		<%= button_tag "Get data", :class => 'btn btn-primary get-data' %>
	</div>
</div>

<div class="row search-region" >
	<h3>Search data in table</h3>
		<%= label_tag :search, "Search: ", :class => "col-md-1 col-xs-12"  %>
	<div class="col-md-11 col-xs-12">
		<%= text_field_tag :search, nil, :class => 'form-control', :placeholder => 'Enter keyword' %>
	</div>
</div>
