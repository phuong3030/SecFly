<% content_for :page_spec do %>
	<title>Resources management</title>
<% end %>

<% content_for :page_script do %>
<% end %>

<% content_for :breadcrumbs do %>
	<%= create_breadcrumbs(
		[ { :name => 'Resources', :path => admin_resources_path }, { :name => 'Show' } ]		
	)%>
<% end %>

<%= content_for :pageheader do %>
	<div class='page-icon'>
		<i class='fa fa-file fa-3x'></i>
	</div>
	<div class='page-title'>
		<h6>SHOW RESOURCES</h6>
		<h1>Resources</h1>
	</div>
<% end %>

<% content_for :maincontent do %>

	<p id="notice"><%= notice %></p>

	<p>
	<strong>Name:</strong>
	<%= @resource.name %>
	</p>

	<p>
	<strong>Description:</strong>
	<%= @resource.description %>
	</p>

	<p>
	<strong>Type:</strong>
	<%= @resource.resource_type %>
	</p>

	<p>
	<strong>Image:</strong>
	<%= image_tag @resource.image.url(:medium), :class => 'img-responsive' %>
	</p>

	<%= link_to 'Edit', edit_admin_resource_path(@resource) %> |
	<%= link_to 'Back', admin_resources_path %>

<% end %>

<%= render :partial => 'shared/admin/cms_master_with_nav' %>
