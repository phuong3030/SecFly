<% content_for :page_spec do %>
	<title>Travel</title>
	<%= stylesheet_link_tag "alertify.core", media: "all" %>
	<%= stylesheet_link_tag "magnific-popup", media: "all" %>
	<%= stylesheet_link_tag "jquery-ui-custom", media: "all" %>
	<%= stylesheet_link_tag "home/home", media: "all" %>
	<%= stylesheet_link_tag "home/services/travel", media: "all" %>
<% end %>

<% content_for :page_script do %>
	<%= javascript_include_tag "magnific-popup" %>
	<%= javascript_include_tag "alertify" %>
	<%= javascript_include_tag "jquery-ui-custom" %>
	<%= javascript_include_tag "home/travel" %>
<% end %>

<%= currently_at 'Services' %>

<div class='content container'>
	
	<div class='row'>	
		<%= render_page_header(
			'Đại lý bán vé máy bay, du lịch, visa',
			[
				{ :name => 'Home', :path => root_path },
				{ :name => 'Services', :path => services_path },
				{ :name => 'Đại lý bán vé máy bay, du lịch, visa' } 
			]
		)%>
		<div class='col-xs-12 col-md-3 col-md-offset-9 header-hotline'>
			<span class='blink-me'>HOTLINE: </span>
			<span>04.85 820 820</span>
		</div>
	</div>

	<div class='services-inner row'>

		<% if flash.now[:notice] %>
			<div class='col-xs-12 col-md-12'>
				<%= content_tag('div', flash.now[:notice], :class => 'alert alert-success') %>
			</div>
		<% end %>

		<% if flash.now[:alert] %>
			<div class='col-xs-12 col-md-12'>
				<%= content_tag('div', flash.now[:alert], :class => 'alert alert-danger') %>
			</div>
		<% end %>

		<div class='col-xs-12 col-md-6'>
			<%= render 'home/services/shared/request_ticket_form', :url => travel_path, :method => 'POST' %>		
		</div>

		<div class='col-xs-12 col-md-6'>
			<div class='sale-banner'>
				<img class='img-responsive' src='/images/passport-map-travel.jpg' alt='travel agency' />			
			</div>
			
			<div class='how-to-request'>
				<i class='fa fa-youtube fa-2x'></i>
				<a class="popup-youtube" href="https://www.youtube.com/watch?v=Lz48U8npOgc">Hướng dẫn đặt vé máy bay</a>
			</div>

			<div class='recently-request'>
				<h4>Vé máy bay khách mới đặt</h4>	
				<ul class='list-unstyled'>
				</ul>
			</div>

			<div class='contact-info'>
				<div class='hotline'>
					<h4>Đường dây nóng: 04.85 820 820</h4>	
				</div>
				<div class='yahoo'>
					<a href = 'ymsgr:sendim?nacenopto_1'>
						<img src="http://opi.yahoo.com/online?u=nacenopto_1&m=g&t=2" border=0>
					</a>
					<a href = 'ymsgr:sendim?nacenopto_2'>
						<img src="http://opi.yahoo.com/online?u=nacenopto_2&m=g&t=2" border=0>
					</a>
					<a href = 'ymsgr:sendim?nacenopto_3'>
						<img src="http://opi.yahoo.com/online?u=nacenopto_3&m=g&t=2" border=0>
					</a>
				</div>
			</div>

		</div>

	</div>

	<%= render 'home/services/shared/dialog' %>
</div>
