<% content_for :page_spec do %>
	<title>Travel</title>
	<%= stylesheet_link_tag "home/service/travel", media: "all" %>
<% end %>

<% content_for :page_script do %>
	<%= javascript_include_tag "home/service/travel" %>
<% end %>

<%= currently_at 'Services' %>

<div class='content container'>
	
	<div class='row'>	
		<%= render_page_header(
			'Dịch vụ vé máy bay, du lịch, visa',
			[
				{ :name => 'Home', :path => root_path },
				{ :name => 'Services', :path => services_path },
				{ :name => 'Dịch vụ vé máy bay, du lịch, visa' } 
			]
		)%>
		<div class='col-xs-12 col-md-3 col-md-offset-9 header-hotline'>
			<span class='blink-me'>HOTLINE: </span>
			<span>+84-4-85 820 820</span>
		</div>
	</div>

	<div class='services-inner row'>

		<% if flash.now[:notice] %>
			<div class='col-xs-12 col-md-12'>
				<%= content_tag('div', flash.now[:notice], :class => 'alert alert-success') %>
			</div>
		<% end %>

		<% if flash.now[:alert] %>
			<div class='col-xs-12 col-md-12'>
				<%= content_tag('div', flash.now[:alert], :class => 'alert alert-danger') %>
			</div>
		<% end %>

		<div class='error-details col-xs-12 col-md-12'>
			<ol>
			</ol>
		</div>

		<div class='col-xs-12 col-md-6'>
			<%= render 'home/services/shared/request_ticket_form', :url => travel_path, :method => 'POST' %>		
		</div>

		<div class='col-xs-12 col-md-6'>
			<div class='sale-banner-wrapper'>
				<%= render 'home/services/shared/sale_banner' %>
			</div>

			<div class='travel-info-region sale-text-region'>
				<h4>Thông tin khuyến mãi</h4>	
				<ul class='list-unstyled'>
					<% @sale_text.collect do |text| %>
					<%= content_tag :li, text.description %>
					<% end %>
				</ul>
			</div>

			<div class='travel-info-region how-to-request'>
				<i class='fa fa-youtube fa-2x'></i>
				<a class="popup-youtube" href="https://www.youtube.com/watch?v=Lz48U8npOgc">Hướng dẫn đặt vé máy bay</a>
			</div>

			<div class='travel-info-region recently-request'>
				<h4>Vé máy bay khách mới đặt</h4>	
				<ul>
					<% if @recently_orders.size > 0 %>
						<% @recently_orders.size.times do |i| %>
							<%= 
								content_tag :li do 
									content_tag(:span, @customers[i] + ' đặt ' + @quantity[i].to_s + ' vé ') +
									content_tag(:span, @recently_orders[i][:from] + ' - ' + @recently_orders[i][:to], :class => 'ticket-place') +
									content_tag(:span, @recently_orders[i][:depart_date].strftime(' ngày %d/%m/%Y'), :class => 'ticket-time')
								end
							%>
						<% end %>
					<% else %>
						<p>Không có vé vừa đặt trong ngày</p>
					<% end %>
				</ul>
			</div>

			<div class='travel-info-region contact-info'>
				<div class='hotline'>
					<span class='blink-me'>Đường dây nóng: </span>
					<span>+84-4-85 820 820</span>
				</div>
				<div class='yahoo'>
					<a href = 'ymsgr:sendim?nacenopto_1'>
						<img src="http://opi.yahoo.com/online?u=nacenopto_1&t=2" border=0>
					</a>
					<a href = 'ymsgr:sendim?nacenopto_2'>
						<img src="http://opi.yahoo.com/online?u=nacenopto_2&t=2" border=0>
					</a>
					<a href = 'ymsgr:sendim?nacenopto_3'>
						<img src="http://opi.yahoo.com/online?u=nacenopto_3&t=2" border=0>
					</a>
					<a href = 'ymsgr:sendim?nacenopto_4'>
						<img src="http://opi.yahoo.com/online?u=nacenopto_4&t=2" border=0>
					</a>
					<a href = 'ymsgr:sendim?nacenopto_5'>
						<img src="http://opi.yahoo.com/online?u=nacenopto_5&t=2" border=0>
					</a>
				</div>
			</div>

		</div>

	</div>

	<%= render 'home/services/shared/dialog' %>
</div>
