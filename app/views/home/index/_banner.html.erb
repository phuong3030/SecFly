<div class='container-fluid'>
	<div id="banner" class="row carousel slide" data-ride="carousel">
		<!-- Indicators -->
		<ol class="carousel-indicators">
			<li data-target="#banner" data-slide-to="0" class="active"></li>
			<li data-target="#banner" data-slide-to="1"></li>
			<li data-target="#banner" data-slide-to="2"></li>
		</ol>

		<!-- Wrapper for slides -->
		<div class="carousel-inner">
			<div class="item active">
				<img src="/images/home-banners/banner1.jpg" alt="" style='min-width: 100%;'>
				<div class="row carousel-caption">
					<div class='col-md-6 col-xs-6'> 
						<h3> 
							<img src='/images/home-banners/slogan1.png' alt='20 years aniversary' class='img-responsive' />	
						</h3>
					</div>
					<div class='col-md-6 col-xs-6'> 
						<p>
						<%= link_to 'IIT Coporation', security_devices_path %> </br>
						<%= link_to 'Travel Agency', travel_path %></br>
						<%= link_to 'Personal Finance Services', personal_finance_path %></br>
						<p>
					</div>
				</div>
			</div>
			<div class="item">
				<img src="/images/home-banners/banner2.jpg" alt="" style='min-width: 100%;'>
				<div class="carousel-caption">
					<div class='col-md-12 col-xs-12'> 
						<h3> 
							<%= link_to security_devices_path do %>
								<p>
									<span>IIT CORPORATION</span></br>
									<span>Ibh innovation & technology transfer corporation</span>
								</p>
							<% end %>
						</h3>
						<p>
						Consulting solutions of high-tech electronic equipment </br>
						Training and guiding, warranting, maintaining </br>
						Research, development and trial production </br>
						<p>
					</div>
				</div>
			</div>
			<div class="item">
				<img src="/images/home-banners/banner3.jpg" alt="" style='min-width: 100%;'>
				<div class="carousel-caption">
					<div class='col-md-12 col-xs-12'> 
						<h3>
							<%= link_to travel_path do %>
								<p style='border-color: #445878'>
									<span style='color: #445878;'>TRAVEL AGENCY</span>
								</p>
							<% end %>
						</h3>
						<p>Nacenopto travel agency</p>
					</div>
				</div>
			</div>
		</div>

		<!-- Controls -->
		<a class="left carousel-control" href="#banner" data-slide="prev">
			<i class="fa fa-chevron-circle-left fa-2x"></i>
		</a>
		<a class="right carousel-control" href="#banner" data-slide="next">
			<i class="fa fa-chevron-circle-right fa-2x"></i>
		</a>
	</div>
</div>
